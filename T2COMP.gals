#RegularDefinitions
D : [0-9]
#Tokens
VAR : [a-z A-Z][a-z A-Z 0-9 _]*

INICIO = VAR : "inicio"
FIM   = VAR : "fim"
SE = VAR : "se"
SENAO = VAR : "senao"
LEIA = VAR : "leia"
ESCREVA = VAR : "escreva"
FUNCTION = VAR : "funcao"
RETORNO = VAR : "retorno"
ENQUANTO = VAR : "enquanto"
PARA = VAR : "para"
FACA = VAR : "faca"
TINT = VAR : "int"
