HEXADECIMAL: 0x[0-9a-fA-F]+
BINARIO : 0b[0-1]+
INTEIRO : {D}+
REAL: {D}+\.{D}*
STRING: \"[^\n\r\"]*\"



 : [\s\t\n\r]*
