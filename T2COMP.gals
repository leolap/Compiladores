"="
"&&"
"||"
">>"
"<<"
"<"
">"
"&"
"|"
"~"
"^"
";"
"."
":"
"["
"]"
"{"
"}"

HEXADECIMAL: 0x[0-9a-fA-F]+
BINARIO : 0b[0-1]+
INTEIRO : {D}+
REAL: {D}+\.{D}*
STRING: \"[^\n\r\"]*\"



 : [\s\t\n\r]*
#NonTerminals
<init>
<l_cmd>
<cmd>
#Grammar
<init> ::= INICIO <l_cmd> FIM;
<l_cmd> ::= <l_cmd> <cmd> | <cmd>;
<cmd> ::= <var>;
<var> ::= TINT VAR "=" INTEIRO | TFLOAT VAR "=" REAL;
